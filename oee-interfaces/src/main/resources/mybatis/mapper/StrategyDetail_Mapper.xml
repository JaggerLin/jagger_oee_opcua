<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.madchick.oee.infrastructure.dao.IStrategyDetailDao">

    <resultMap id="strategyDetailMap" type="cn.madchick.oee.infrastructure.po.StrategyDetail">
        <id column="id" property="id"/>
        <result column="strategy_id" property="strategyId"/>
        <result column="frequency" property="frequency"/>
        <result column="threshold" property="threshold"/>
        <result column="begin_time" property="beginTime"/>
        <result column="stop_time" property="endTime"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insertList" parameterType="java.util.List">
        INSERT INTO strategy_detail(strategy_id, frequency, threshold,
        begin_time, stop_time, create_time, update_time)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.strategyId},
            #{item.frequency},
            #{item.threshold},
            NOW(),
            NOW(),
            NOW(),
            NOW()
            )
        </foreach>
    </insert>

    <select id="queryStrategyDetailList" parameterType="java.lang.Long" resultMap="strategyDetailMap">
        SELECT id, strategy_id, frequency, threshold, begin_time, stop_time, create_time, update_time
        FROM strategy_detail
        WHERE strategy_id = #{strategyId}
    </select>

    <select id="queryStrategyDetail" parameterType="java.lang.Long" resultType="cn.madchick.oee.infrastructure.po.StrategyDetail">
        SELECT id, strategy_id, frequency, threshold, begin_time, stop_time, create_time, update_time
        FROM strategy_detail
        WHERE strategy_id = #{strategyId}
    </select>

</mapper>